<UserControl x:Class="ScenicManage.Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScenicManage"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border>
            <Grid Background="White" Margin="0,-7,0,0">
                <Grid Height="50" VerticalAlignment="Top" Margin="-5,0,0,0">
                    <Border Background="#FFEDF0F4" BorderBrush="#FFDAE0EA" BorderThickness="0,0,0,1.5" />
                    <TextBlock x:Name="tag" Text="查看景点分布图" FontSize="14" Foreground="Black"  TextDecorations="{x:Null}" Height="27" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,17,0,6" FontWeight="Bold"/>
                    <Border HorizontalAlignment="Center"/>
                </Grid>
                <StackPanel>
                    <Grid x:Name="Panel" Height="256" Margin="0,50,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
